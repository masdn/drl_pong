{
  "seed": 0,
  "env_name": "PongNoFrameskip-v4",

  "num_episodes": 8000,
  "max_steps": 10000,
  "max_frame": 10000000,

  "gamma": 0.99,

  "num_step_returns": 5,
  "training_frequency": 5,

  "entropy_coef": 0.01,
  "value_loss_coef": 0.5,
  "learning_rate": 0.0007,
  "max_grad_norm": 0.5,

  "conv_layers": [
    { "out_channels": 32, "kernel_size": 8, "stride": 4 },
    { "out_channels": 64, "kernel_size": 4, "stride": 2 },
    { "out_channels": 64, "kernel_size": 3, "stride": 1 }
  ],
  "fc_hid_layers": [512],

  "frame_skip": 4,
  "frame_stack": 4,
  "grayscale": true,
  "scale_obs": true,

  "reward_scale": "sign",
  "num_envs": 16,

  "log_interval": 10,
  "log_frequency": 10000,
  "eval_frequency": 10000,
  "render_every": 0
}


